{
  "title": "Windows と Mac の中間",
  "rules": [
    {
      "description": "kana + okl; -> arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "japanese_kana",
            "modifiers":{
              "optional": ["any"]
            }
          },
          "to": [{
            "set_variable": {
              "name": "kana",
              "value": 1
            }
          }],
          "to_after_key_up": [{
            "set_variable": {
              "name": "kana",
              "value": 0
            }
          }],
          "to_if_alone": [{ 
            "key_code": "japanese_kana"
          }]
        },
        {
          "type": "basic",
          "from": { 
            "key_code": "o",
            "modifiers":{
              "optional": ["any"]
            }
          },
          "to": [{ 
            "key_code": "up_arrow"
          }],
          "conditions": [{ 
            "type": "variable_if", 
            "name": "kana", 
            "value": 1
          }]
        },
        {
          "type": "basic",
          "from": { 
            "key_code": "k",
            "modifiers":{
              "optional": ["any"]
            }
          },
          "to": [{ 
            "key_code": "left_arrow"
          }],
          "conditions": [{ 
            "type": "variable_if", 
            "name": "kana", 
            "value": 1
          }]
        },
        {
          "type": "basic",
          "from": { 
            "key_code": "l",
            "modifiers":{
              "optional": ["any"]
            }
          },
          "to": [{ 
            "key_code": "down_arrow"
          }],
          "conditions": [{ 
            "type": "variable_if", 
            "name": "kana", 
            "value": 1
          }]
        },
        {
          "type": "basic",
          "from": { 
            "key_code": "semicolon",
            "modifiers":{
              "optional": ["any"]
            }
          },
          "to": [{ 
            "key_code": "right_arrow"
          }],
          "conditions": [{ 
            "type": "variable_if", 
            "name": "kana", 
            "value": 1
          }]
        }
      ]
    },
    {
      "description": "control + j -> enter",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "control + p -> up arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "control + n -> down arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "control + f -> right arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "control + b -> left arrow",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "b",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        }
      ]
    },
    {
      "description": "control + a -> home",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "home"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.microsoft.VSCode"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "control + e -> end",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "end"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.microsoft.VSCode"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "control + insert -> copy",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "insert",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "c",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "shift + insert -> paste",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "insert",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "v",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "control + q -> bookmark search",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "l",
              "modifiers": [
                "left_command"
              ]
            },
            {
              "key_code": "lang2"
            },
            {
              "key_code": "b"
            },
            {
              "key_code": "m"
            },
            {
              "key_code": "spacebar"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "com.google.Chrome"
              ]
            }
          ]
        }
      ]
    }
  ]
}
